{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "types"], // Make sure './types' is included here
    "types": ["node", "express"] // Ensure 'express' is listed
  },
  "include": ["src/**/*", "types/**/*"] // Ensure 'types' is included here
}
